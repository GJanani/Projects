<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ECECFC">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_height="wrap_content"
                android:textColor="#030A2C"
                android:textStyle="bold"
                android:textSize="15pt"
                android:text="ESPN"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="70pt"
                    android:layout_gravity="right"
                    android:layout_height="30pt"
                    android:src="@drawable/in2"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2pt"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3pt">
                <ImageView
                    android:layout_width="30pt"
                    android:src="@drawable/basket"
                    android:layout_height="30pt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3pt"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basketball"
                    android:textColor="#07071F"
                    android:textStyle="bold"
                    android:textSize="13pt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIMA"
                    android:textColor="#A2A2A3"
                    android:textSize="5pt"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1pt">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4pt"
                        android:background="@drawable/rect">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2pt"
                            android:text="Today"
                            android:textSize="8pt"
                            android:textColor="#ffff"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5pt"
                        android:text="Yesterday"
                        android:textSize="8pt"
                        android:textColor="#0C0C0C"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5pt"
                        android:text="Last Week"
                        android:textSize="8pt"
                        android:textColor="#0C0C0C"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5pt"
                        android:text="Last Month"
                        android:textColor="#0C0C0C"
                        android:textSize="8pt" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2pt"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100pt"
                android:layout_margin="5pt"
                android:gravity="center"
                android:background="@drawable/summer">
                <ImageView
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:src="@drawable/button"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4pt"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0C0000"
                    android:textSize="7pt"
                    android:text="Every twist and turn in the Zion sneaker chase will..."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#020B2B"
                    android:textSize="7pt"
                    android:textStyle="bold"
                    android:text="Read more"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100pt"
                android:src="@drawable/summer"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>